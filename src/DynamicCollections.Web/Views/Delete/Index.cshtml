@model DgonDotNet.Blog.Samples.DynamicCollections.Models.DeleteViewModel

@{
	ViewBag.Title = "Deleting";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Delete", FormMethod.Post, new { role = "form", @class = "form-inline" }))
{
	<h1>Deleting</h1>
	<table id="table-deletable" class="table table-bordered table-striped table-hover table-responsive">
		<caption>Deletable things</caption>
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Things.First().Number)</th>
				<th>@Html.DisplayNameFor(model => model.Things.First().Text)</th>
				<th>@Html.DisplayNameFor(model => model.Things.First().IsEven)</th>
				<th class="table-actions">Actions</th>
			</tr>
		</thead>
		<tbody>
			@Html.DisplayFor(m => m.Things)
		</tbody>
	</table>
	<div class="form-group">
		<input type="submit" name="cancel" value="Cancel" class="btn btn-default" />
	</div>
	<div class="form-group">
		<input type="submit" name="save" value="Save" class="btn btn-danger" />
	</div>
}
@section scripts
{
	<script type="text/javascript">
		$(function () {
			DGON_DOTNET.ClientInteraction.makeDeletable('#table-deletable');
		});
	</script>
}
